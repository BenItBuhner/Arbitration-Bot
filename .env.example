# Required
# These can be obtained via Polymarket settings when signed in.
POLYMARKET_TRADES_PROVIDER="data-api"
POLYMARKET_CLOB_PRIVATE_KEY=""
POLYMARKET_CLOB_API_KEY=""
POLYMARKET_CLOB_API_SECRET=""

# Optional provider selection
MARKET_PROVIDER="polymarket"

# Kalshi (required if MARKET_PROVIDER=kalshi)
KALSHI_ENV="demo"
KALSHI_API_KEY=""
KALSHI_PRIVATE_KEY_PATH=""
# KALSHI_PRIVATE_KEY_PEM=""
# KALSHI_BASE_URL="https://demo-api.kalshi.co/trade-api/v2"
# KALSHI_WS_URL="wss://demo-api.kalshi.co/trade-api/ws/v2"
# Optional web session for v1/forecast_history (only if needed)
# KALSHI_WEB_EMAIL=""
# KALSHI_WEB_PASSWORD=""

# Price diff detection
# Absolute odds-price gap required to flag (e.g. 0.07 = 7 cents).
TEST_PRICE_DIFF_REQ="0.07"
# Optional: USD budget for realistic fill simulation
PRICE_DIFF_FILL_USD="500"

# Execution delay (shared by arbitrage bot and price diff detection)
# Simulates network/exchange lag between commitment and fill.
# Random delay between MIN and MAX ms is applied after immediate commitment.
EXECUTION_DELAY_MIN_MS="550"
EXECUTION_DELAY_MAX_MS="600"
