# Required
# These can be obtained via Polymarket settings when signed in.
POLYMARKET_TRADES_PROVIDER="data-api"
POLYMARKET_CLOB_PRIVATE_KEY=""
POLYMARKET_CLOB_API_KEY=""
POLYMARKET_CLOB_API_SECRET=""

# Optional provider selection
MARKET_PROVIDER="polymarket"

# Kalshi (required if MARKET_PROVIDER=kalshi)
KALSHI_ENV="demo"
KALSHI_API_KEY=""
KALSHI_PRIVATE_KEY_PATH=""
# KALSHI_PRIVATE_KEY_PEM=""
# KALSHI_BASE_URL="https://demo-api.kalshi.co/trade-api/v2"
# KALSHI_WS_URL="wss://demo-api.kalshi.co/trade-api/ws/v2"
# Optional web session for v1/forecast_history (only if needed)
# KALSHI_WEB_EMAIL=""
# KALSHI_WEB_PASSWORD=""

# Price diff detection
# Absolute odds-price gap required to flag (e.g. 0.07 = 7 cents).
TEST_PRICE_DIFF_REQ="0.07"
# Optional: USD budget for realistic fill simulation
PRICE_DIFF_FILL_USD="500"

# Execution delay (shared by arbitrage bot and price diff detection)
# Simulates network/exchange lag between commitment and fill.
# Random delay between MIN and MAX ms is applied after immediate commitment.
EXECUTION_DELAY_MIN_MS="550"
EXECUTION_DELAY_MAX_MS="600"

# ── Reliability / Data-freshness knobs ──────────────────────────────
# Set -1 for infinite retries (recommended for servers).

# Polymarket market WS
# PM_WS_RECONNECT_ATTEMPTS="-1"
# PM_WS_RECONNECT_DELAY_MS="3000"
# PM_WS_PING_INTERVAL_MS="30000"

# Polymarket crypto WS
# CRYPTO_WS_RECONNECT_ATTEMPTS="-1"
# CRYPTO_WS_RECONNECT_DELAY_MS="3000"

# Kalshi WS
# KALSHI_WS_RECONNECT_ATTEMPTS="-1"
# KALSHI_WS_RECONNECT_DELAY_MS="3000"

# Kalshi crypto WS (uses Polymarket Chainlink feed)
# KALSHI_CRYPTO_WS_RECONNECT_ATTEMPTS="-1"
# KALSHI_CRYPTO_WS_RECONNECT_DELAY_MS="3000"

# Polymarket staleness thresholds (ms)
# Any WS event (book, price_change, last_trade) resets the book freshness timer.
# PM_BOOK_STALE_MS="45000"
# PM_BOOK_RESET_MS="90000"
# PM_WS_RESET_COOLDOWN_MS="45000"
# PM_PRICE_STALE_MS="45000"
# PM_PRICE_RESET_MS="90000"
# PM_CRYPTO_RESET_COOLDOWN_MS="45000"
# PM_DATA_STARTUP_GRACE_MS="20000"
# PM_MARKET_RESELECT_MS="60000"
# PM_MARKET_RESELECT_COOLDOWN_MS="60000"

# Kalshi staleness thresholds (ms)
# Any WS event (orderbook, ticker, trade) resets the book freshness timer.
# KALSHI_BOOK_STALE_MS="45000"
# KALSHI_PRICE_STALE_MS="45000"
# KALSHI_DATA_STARTUP_GRACE_MS="20000"
# KALSHI_MARKET_RESELECT_MS="60000"
# KALSHI_MARKET_RESELECT_COOLDOWN_MS="60000"

# ── Arbitrage bot tuning ────────────────────────────────────────────

# Evaluation loop interval (ms). Lower = faster reaction, higher = less CPU.
# Market data arrives at ~50-100ms via WS, so 10ms is plenty fast.
# ARB_EVAL_INTERVAL_MS="10"

# Position timeout: force-resolve stuck positions after these durations.
# MAX_AGE = time after BOTH markets close before force-resolving.
# MAX_UNRESOLVED = absolute max time a position can exist regardless.
# ARB_POSITION_MAX_AGE_MS="300000"
# ARB_POSITION_MAX_UNRESOLVED_MS="600000"
